<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Title" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea rows="3" class="form-control" name="description" placeholder="Description">{{note.description}}</textarea>
                </div>
                <button class="btn btn-primary btn-block" type="submit" >Save</button>
            </form>
        </div>
    </div>
</div>